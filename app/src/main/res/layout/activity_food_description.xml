<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/description_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_food_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:src="@tools:sample/avatars" />

        <TextView
            style="@style/TextContent.HeadlineMedium.Bold"
            android:id="@+id/tv_food_price"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/harga_makanan" />

        <TextView
            style="@style/TextContent.TitleMedium.Bold.MarginLeftRight"
            android:id="@+id/tv_food_name"
            android:layout_marginBottom="16dp"
            android:text="@string/nama_makanan"
            android:textSize="18sp"/>

        <TextView
            style="@style/TextContent.BodyMedium.Gray.MarginLeftRight"
            android:id="@+id/tv_food_description"
            android:layout_marginBottom="16dp"
            android:lineSpacingMultiplier="1"
            android:text="@string/description" />

        <TextView
            style="@style/TextContent.TitleMedium.Bold.MarginLeftRight"
            android:id="@+id/tv_food_composition"
            android:layout_marginBottom="8dp"
            android:text="@string/composition" />

        <TextView
            style="@style/TextContent.BodyMedium.Gray.MarginLeftRight"
            android:id="@+id/tv_food_composition_description"
            android:layout_marginBottom="16dp"
            android:lineSpacingMultiplier="1"
            android:text="@string/composition" />

    </LinearLayout>
</ScrollView>